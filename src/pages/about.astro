---
/**
 * /about/ redirects to / (About is the homepage).
 * Client redirect for static build; for SSR/host redirects you can use server redirect instead.
 */
const target = new URL("/", Astro.url.origin);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>About — Redirecting</title>
		<link href="/icon.svg" rel="icon" type="image/svg+xml" />
		<meta http-equiv="refresh" content={`0;url=${target}`} />
		<script is:inline define:vars={{ target: target.toString() }}>
			window.location.replace(target);
		</script>
	</head>
	<body>
		<p>
			<a href={target}>About (Suraj Sahu)</a> — redirecting…
		</p>
	</body>
</html>
