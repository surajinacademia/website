---
import { resourcesPage } from "@/data/pages/resources";
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "Useful resources and links",
	title: "Resources",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-12">Resources</h1>
	<div class="prose prose-sm prose-cactus max-w-none">
		<p class="mb-6">{resourcesPage.intro}</p>

		{resourcesPage.sections.map((section) => (
			<div class="mt-8">
				<h2 class="mb-4 text-xl">{section.title}</h2>
				<ul class="list-inside list-disc space-y-2">
					{section.links.map((link) => (
						<li>
							<a class="cactus-link" href={link.href} target="_blank" rel="noopener">
								{link.label}
							</a>
							{" "}- {link.description}
						</li>
					))}
				</ul>
			</div>
		))}

		<div class="mt-8">
			<p class="text-sm opacity-75">{resourcesPage.footerNote}</p>
		</div>
	</div>
</PageLayout>
