---
import { cvPage } from "@/data/pages/cv";
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "Curriculum Vitae - Suraj Sahu",
	title: "CV",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-12">Curriculum Vitae</h1>
	<div class="prose prose-sm prose-cactus max-w-none">
		<p class="mb-6">
			Download my full CV or condensed resume as PDF using the buttons below:
		</p>
		<div class="flex flex-wrap gap-3">
			{cvPage.downloads.map((d) => (
				<a
					class="cactus-link inline-block rounded-lg border border-current px-6 py-3 text-center font-medium hover:bg-accent hover:text-accent-fg"
					href={d.href}
					download={d.filename}
				>
					{d.label}
				</a>
			))}
		</div>

		<div class="mt-12">
			<h2 class="mb-4 text-xl">Personal Statement</h2>
			{cvPage.personalStatement.map((p) => (
				<p class="mb-4 text-justify">{p}</p>
			))}
		</div>

		<div class="mt-12">
			<h2 class="mb-4 text-xl">Education</h2>
			{cvPage.education.map((item) => (
				<div class="mb-6">
					<h3 class="font-semibold">{item.degree}</h3>
					<p class="text-sm opacity-75">{item.institution}</p>
					{item.period ? <p class="text-sm opacity-75">{item.period}</p> : null}
				</div>
			))}
		</div>

		<div class="mt-12">
			<h2 class="mb-4 text-xl">Research Focus</h2>
			<ul class="list-inside list-disc">
				{cvPage.researchFocus.map((item) => (
					<li>{item}</li>
				))}
			</ul>
		</div>
	</div>
</PageLayout>
