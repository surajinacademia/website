---
import SocialList from "@/components/SocialList.astro";
import { navLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer class="mt-auto w-full border-t border-gray-200 pt-12 pb-8 dark:border-white/10">
	<div class="flex flex-col items-center gap-6 text-center">
		<p class="text-accent-2 text-lg font-semibold uppercase tracking-wider sm:text-xl">
			{siteConfig.title}
		</p>
		<p class="text-global-text text-sm opacity-80">
			PhD Candidate · UC Merced · Gopinathan Lab
		</p>
		<SocialList />
		<nav
			aria-labelledby="footer_links"
			class="flex flex-wrap justify-center gap-x-4 gap-y-2 text-sm opacity-80"
		>
			<p id="footer_links" class="sr-only">More on this site</p>
			{
				navLinks.map((link) => (
					<a class="hover:opacity-100 hover:underline" href={link.path}>
						{link.title}
					</a>
				))
			}
		</nav>
		<p class="text-global-text text-xs opacity-70">
			&copy; {year} {siteConfig.author}. Built with Astro.
		</p>
	</div>
</footer>
